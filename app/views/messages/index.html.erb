<h1>Listing messages</h1>

<table>
  <tr>
    <th>Summary</th>
    <th>Message source</th>
    <th>Message source type</th>
    <th>Read</th>
    <th>Dismissed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.summary %></td>
    <td><%= message.message_source_id %></td>
    <td><%= message.message_source_type %></td>
    <td><%= message.read %></td>
    <td><%= message.dismissed %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

